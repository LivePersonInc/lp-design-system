{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@liveperson-design-system/components": ["@liveperson-design-system/components/build"],
      "@liveperson-design-system/icons": ["@liveperson-design-system/icons/build"],
      "@liveperson-design-system/tokens": ["@liveperson-design-system/tokens/build"]
    }
  },
  "include": [
    "docs",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
