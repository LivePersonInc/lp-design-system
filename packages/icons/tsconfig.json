{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "outDir": "dist/types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
