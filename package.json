{
  "name": "@liveperson-design-system/root",
  "description": "The company design system for LivePerson",
  "version": "0.7.6",
  "private": true,
  "contributors": [
    {
      "name": "Mykhailo Riabokon",
      "email": "mriabokon@liveperson.com"
    },
    {
      "name": "Itay Haephrati",
      "email": "ihaephrati@liveperson.com"
    },
    {
      "name": "Charlie Wu",
      "email": "chwu@liveperson.com"
    }
  ],
  "license": "MIT",
  "homepage": "https://livepersoninc.github.io/lp-design-system/",
  "repository": "LivePersonInc/lp-design-system",
  "bugs": {
    "url": "https://github.com/LivePersonInc/lp-design-system/issues"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "lerna link",
    "start": "yarn bootstrap && start-storybook --docs -s public",
    "build": "yarn bootstrap && build-storybook --docs -s public",
    "deploy": "storybook-to-ghpages -s build --source-branch main",
    "build:components": "yarn workspace @liveperson-design-system/components run build",
    "build:icons": "yarn workspace @liveperson-design-system/icons run build",
    "build:tokens": "yarn workspace @liveperson-design-system/tokens run build",
    "build:all": "yarn build:tokens && yarn build:icons && yarn build:components",
    "bootstrap": "yarn build:all && lerna link",
    "publish:all": "yarn bootstrap && dotenv lerna publish --conventional-commits --create-release github",
    "release": "np --yolo --no-publish --no-yarn"
  },
  "devDependencies": {
    "@liveperson-design-system/components": "workspaces:*",
    "@liveperson-design-system/icons": "workspaces:*",
    "@liveperson-design-system/tokens": "workspaces:*",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/components": "^6.3.12",
    "@storybook/node-logger": "^5.3.21",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^6.3.12",
    "@types/lodash": "^4.14.176",
    "change-case": "^4.1.2",
    "css-loader": "3.4.2",
    "dotenv-cli": "^4.1.0",
    "fs-extra": "^10.0.0",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "lorem-ipsum": "^2.0.4",
    "np": "^7.5.0",
    "sass-loader": "8.0.2",
    "title-case": "^3.0.3",
    "to-string-loader": "^1.1.6",
    "ts-dedent": "^2.2.0",
    "webpack-cli": "^3.3.12"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "direflow-scripts/direflow-jest.config.js"
    ]
  },
  "packageManager": "yarn@2.4.3"
}
