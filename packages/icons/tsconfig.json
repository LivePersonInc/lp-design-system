{
  "compilerOptions": {
    "lib": ["es2017"],
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "outDir": "dist/types"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
