  "bugs": {
    "email": "design-system@liveperson.com",
    "url": "https://github.com/LivePersonInc/lp-design-system/issues/new"
  },
  "main": "build/direflowBundle.js",
  "files": [
    "build"
  ],
  "scripts": {
    "start": "start-storybook -s public",
    "start:docs": "start-storybook --docs -s public",
    "build": "direflow-scripts build && node ./scripts/after-build.js",
    "build:lib": "direflow-scripts build:lib",
    "test": "direflow-scripts test",
    "storybook:build": "build-storybook -s public",
    "storybook:build:docs": "build-storybook --docs -s public",
    "storybook:deploy": "storybook-to-ghpages -s storybook:build --source-branch develop",
    "storybook:docs:deploy": "storybook-to-ghpages -s storybook:build:docs --source-branch develop"
  },
  "dependencies": {
    "@types/node": "12.7.8",
    "@types/react": "16.9.3",
    "@types/react-dom": "16.9.1",
    "classnames": "^2.3.1",
    "direflow-component": "3.5.5",
    "direflow-scripts": "3.5.5",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.4.1"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addons": "^6.3.8",
    "@storybook/node-logger": "^6.3.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.8",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^6.3.8",
    "@types/jest": "^26.0.24",
    "@types/react-test-renderer": "16.9.1",
    "css-loader": "3.4.2",
    "fs-extra": "^10.0.0",
    "jest-environment-jsdom-fourteen": "0.1.0",
    "np": "^7.5.0",
    "react-app-rewired": "2.1.3",
    "react-test-renderer": "16.9.0",
    "sass-loader": "8.0.2",
    "style-loader": "0.23.1",
    "to-string-loader": "^1.1.6",
    "ts-loader": "^6.2.2",
    "tslint": "5.20.0",
    "tslint-config-airbnb": "5.11.2",
    "tslint-react": "4.1.0",
    "typescript": "^3.9.10",
    "webpack-cli": "^3.3.12"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "direflow-scripts/direflow-jest.config.js"
    ]
  },
  "config-overrides-path": "direflow-webpack.js"
}
