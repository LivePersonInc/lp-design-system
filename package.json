{
  "name": "@liveperson-design-system/root",
  "description": "The company design system for LivePerson",
  "version": "0.7.0",
  "private": true,
  "contributors": [
    {
      "name": "Mykhailo Riabokon",
      "email": "mriabokon@liveperson.com"
    },
    {
      "name": "Itay Haephrati",
      "email": "ihaephrati@liveperson.com"
    },
    {
      "name": "Charlie Wu",
      "email": "chwu@liveperson.com"
    }
  ],
  "license": "MIT",
  "homepage": "https://livepersoninc.github.io/lp-design-system/",
  "repository": "LivePersonInc/lp-design-system",
  "bugs": {
    "url": "https://github.com/LivePersonInc/lp-design-system/issues"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@liveperson-design-system/tokens/**/**"
    ]
  },
  "scripts": {
    "start": "start-storybook -s public",
    "start:docs": "start-storybook --docs -s public",
    "storybook:build": "build-storybook -s public",
    "storybook:build:docs": "build-storybook --docs -s public",
    "storybook:deploy": "storybook-to-ghpages -s storybook:build --source-branch main",
    "storybook:docs:deploy": "storybook-to-ghpages -s storybook:build:docs --source-branch main",
    "build:components": "lerna exec --scope=@liveperson-design-system/components -- yarn build",
    "build:icons": "lerna exec --scope=@liveperson-design-system/icons -- yarn build",
    "build:tokens": "lerna exec --scope=@liveperson-design-system/tokens -- yarn build",
    "build:all": "yarn build:tokens && yarn build:icons && yarn build:components",
    "bootstrap": "lerna link && yarn build:all",
    "publish:all": "yarn bootstrap && dotenv lerna publish --conventional-commits --create-release github",
    "release": "np --yolo --no-publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.8",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addons": "^6.3.8",
    "@storybook/components": "^6.3.8",
    "@storybook/node-logger": "^6.3.8",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.8",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^6.3.8",
    "css-loader": "3.4.2",
    "dotenv-cli": "^4.1.0",
    "fs-extra": "^10.0.0",
    "lerna": "^4.0.0",
    "np": "^7.5.0",
    "sass-loader": "8.0.2",
    "to-string-loader": "^1.1.6",
    "webpack-cli": "^3.3.12"
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "direflow-scripts/direflow-jest.config.js"
    ]
  }
}
